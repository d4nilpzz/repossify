<configuration>
    <conversionRule conversionWord="repossify" class="dev.d4nilpzz.utils.LoggerColorConverter"/>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%white(%d{HH:mm:ss})] [%repossify(%level)] [%cyan(%logger{36})] %msg\_%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
